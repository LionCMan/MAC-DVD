<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="imageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/business_image</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="smallText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/my_text_size2</item>
    </style>

    <style name="smallTextL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/my_text_size2</item>
    </style>

    <style name="description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/my_text_size</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="line1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_below">@id/business_title</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="line2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="fButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_above">@id/buffer4</item>
        <item name="android:layout_toRightOf">@id/buffer1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/my_text_size</item>
        <item name="android:background">@drawable/mybutton1</item>
    </style>

    <style name="cButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_above">@id/buffer4</item>
        <item name="android:layout_toRightOf">@id/buffer3</item>
        <item name="android:layout_toLeftOf">@id/buffer2</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/my_text_size</item>
        <item name="android:background">@drawable/mybutton</item>
    </style>

    <style name="buffer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="buffer4">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
</resources>
